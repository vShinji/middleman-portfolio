<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport"
          content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Use the title from a page's frontmatter if it has one -->
    <title><%= current_page.data.title || "vShinji portfolio" %></title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v6.1.2/css/all.css">
    <%= stylesheet_link_tag "site" %>
    <%= javascript_include_tag "site" %>
    <meta name="vShinji" content="vShinji portfolio site">
    <!-- Facebook Open Graph data -->
    <meta property="og:title" content="vShinji Portfolio | Web dev" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="THE_URL_OF_MY_PORTFOLIO" />
    <meta property="og:image" content="<%= image_path 'MY_OG_IMAGE_WITH_RIGHT_SIZE.png' %>" />
    <meta property="og:vShinji" content="vShinji portfolio site" />
    <meta property="og:site_name" content="vShinji Portfolio | Web dev" />
    <!-- Twitter Card data -->
    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:site" content="@twitter_handle">
    <meta name="twitter:title" content="vShinji Portfolio | Web dev">
    <meta name="twitter:vShinji" content="vShinji portfolio site">
    <meta name="twitter:creator" content="@twitter_handle">
    <meta name="twitter:image:src" content="<%= image_path 'MY_OG_IMAGE_WITH_RIGHT_SIZE.png' %>">
    <%# scroll animation %>
    <script src="https://unpkg.com/scrollreveal"></script>
  </head>
  <body class="star">
    <%= yield %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <script>
      ScrollReveal({
        distance: "100px",
        duration: 2500,
        delay: 200
      });

      ScrollReveal().reveal(".main-title, .section-title", {delay: 200, origin: "left", interval: 100 });
      ScrollReveal().reveal(".about-title, .about-desc", {delay: 300, origin: "right" });
      ScrollReveal().reveal(".projects-title, .project-desc", {delay: 400, origin: "bottom", interval: 200 });
      ScrollReveal().reveal(".social-reveal, .social-icon", {delay: 500, origin: "bottom", interval: 200 });
    </script>
  </body>
</html>
